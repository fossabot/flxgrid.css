<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Standard Meta -->
    <meta charset="utf-8" />

    <!-- Site Properities -->
    <title><%= @getPreparedTitle() %></title>
    <meta name="description" content="<%= @getPreparedDescription() %>" />
    <meta name="keywords" content="<%= @getPreparedKeywords() %>" />
    <meta name="viewport" content="width=device-width,initial-scale=1"/>

    <!-- DocPad Meta -->
    <%- @getBlock('meta').toHTML() %>

    <!-- DocPad Styles + Our Own -->
    <%- @getBlock('styles').add(@getUrl([].concat(@site.styles or []).concat(@document.styles or []))).toHTML() %>

    <link rel="stylesheet" href="<%= @getUrl('/vendor/normalize.css/normalize.css') %>">
    <link rel="stylesheet" href="<%= @getUrl('/vendor/bettertext.css/bettertext.css') %>">
    <link rel="stylesheet" href="<%= @getUrl('/css/template.css') %>">
    <link rel="stylesheet" href="<%= @getUrl('/css/github.css') %>">
    <link rel="stylesheet" href="<%= @getUrl('/grid.css') %>">

    <script src="<%= @getUrl('/resizer/webcomponents-lite.min.js') %>"></script>
    <link rel="import" href="<%= @getUrl('/resizer/components-dev.html') %>">
</head>
<body>
   <%- @content %>
    <div id="resizerblock" class="resizer-container"></div>
</body>
</html>
