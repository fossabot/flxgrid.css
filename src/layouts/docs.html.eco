<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Standard Meta -->
    <meta charset="utf-8" />

    <!-- Site Properities -->
    <title><%= @getPreparedTitle() %></title>
    <meta name="description" content="<%= @getPreparedDescription() %>" />
    <meta name="keywords" content="<%= @getPreparedKeywords() %>" />
    <meta name="viewport" content="width=device-width,initial-scale=1"/>

    <!-- DocPad Meta -->
    <%- @getBlock('meta').toHTML() %>

    <!-- DocPad Styles + Our Own -->
    <%- @getBlock('styles').add(@getUrl([].concat(@site.styles or []).concat(@document.styles or []))).toHTML() %>

    <link rel="stylesheet" href="<%= @getUrl('/flxgrid.css') %>">
    <link rel="stylesheet" href="<%= @getUrl('/css/template.css') %>">
</head>
<body class="flx-col space-in-base-xs space-in-h-kilo-md" id="top">
    <article class="flx-cell-grow-xs">
        <%- @content %>
    </article>
    <%= @partial('footer') %>
</body>
</html>
